@model IEnumerable<PerformanceAPI.Models.PositionsModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Salary Information";
}
<link href="~/css/salaryinformation.css" rel="stylesheet" />

<div class="row text-center">
    <div class="col-sm-12">
        <h2>Salary Information</h2>
    </div>
</div>
<hr />

<div class="row">
    <div style="overflow:scroll;height:300px;width:100%;overflow:auto">
        <table style="width: 100%">
            <thead class="text-center divBorderNoTop" style="background:maroon; border:1px solid">
                <tr>
                    <th class="divLeftBorder text-white" style="width:50%">
                        Position
                    </th>
                    <th class="divLeftBorder text-white" style="width:50%">
                        Salary Ranges
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    @if (item.SalaryLowerBound != null)
                    {
                        <tr class="text-center divBorderNoTop bg-gray">
                            <td class="col-4 divLeftBorder" style="width:50%">
                                @Html.DisplayFor(model => item.PositionName)
                            </td>
                            <td class=" col-1 divLeftBorder" style="width:50%">
                                $@Html.DisplayFor(model => item.SalaryLowerBound)-$@Html.DisplayFor(model => item.SalaryUpperBound)
                            </td>

                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <table style="width:100%">
        <thead class="text-center divBorderNoTop" style="background:maroon; border:1px solid">
            <tr>
                <th class="divLeftBorder text-white" style="width:40%">
                    Rating Name
                </th>
                <th class="divLeftBorder text-white" style="width:20%">
                    Lower Bound
                </th>
                <th class="divLeftBorder text-white" style="width:20%">
                    Target
                </th>
                <th class="divLeftBorder text-white" style="width:20%">
                    Upper Bound
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                @if (x.MGLowerBound != null)
                {
                    <tr class="text-center divBorderNoTop bg-gray">
                        <td class="col-4 divLeftBorder" style="width:40%">
                            @Html.DisplayFor(model => x.RatingName)
                        </td>
                        <td class=" col-1 divLeftBorder" style="width:20%">
                            @Html.DisplayFor(model => x.MGLowerBound)
                        </td>
                        <td class=" col-1 divLeftBorder" style="width:20%">
                            @Html.DisplayFor(model => x.MGTarget)
                        </td>
                        <td class=" col-1 divLeftBorder" style="width:20%">
                            @Html.DisplayFor(model => x.MGUpperBound)
                        </td>

                    </tr>
                }
            }
        </tbody>
    </table>
</div>




