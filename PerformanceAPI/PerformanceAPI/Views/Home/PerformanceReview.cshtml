@model PerformanceAPI.Models.PerformanceReviewModel

@{
    ViewData["Title"] = "Edit";
}


<h1><Edit></h1>

<h4>Performance Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PerformanceReview">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Employee ID</label>
                <input asp-for="EmployeeID" class="form-control" disabled />
                <span asp-validation-for="EmployeeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" class="form-control" disabled />
                <input type="hidden" asp-for="FirstName" class="form-control"/>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Last Name</label>
                <input asp-for="LastName" class="form-control" disabled />
                <input type="hidden" asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Date of Reivew</label>
                <input asp-for="ReviewDate" class="form-control" disabled/>
                <input type="hidden" asp-for="ReviewDate" class="form-control" />
                <span asp-validation-for="ReviewDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Supervisor</label>
                <input asp-for="Supervisor" class="form-control"  disabled/>
                <input type="hidden" asp-for="Supervisor" class="form-control" />
                <span asp-validation-for="Supervisor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Review Period</label>
                <input asp-for="ReviewPeriod" class="form-control" disabled/>
                <input type="hidden" asp-for="ReviewPeriod" class="form-control" />
                <span asp-validation-for="ReviewPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Performance Rating</label>
                <input asp-for="PerformanceRatingID" class="form-control" />
                <span asp-validation-for="PerformanceRatingID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Last Performance Review Rating</label>
                <input asp-for="PrLastRating" class="form-control" disabled />
                <input type="hidden" asp-for="PrLastRating" class="form-control" />
                <span asp-validation-for="PrLastRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Current Position</label>
                <input asp-for="EmployeePosition" class="form-control" />
                <span asp-validation-for="EmployeePosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Department </label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Date of Next Review</label>
                <input asp-for="DateOfNextReview" class="form-control" />
                <span asp-validation-for="DateOfNextReview" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Promoted Position</label>
                <input asp-for="Promotion" class="form-control" />
                <span asp-validation-for="Promotion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayIncreaseString" class="control-label">Percent Pay Increase</label>
                <input asp-for="PayIncreaseString" class="form-control" />
                <span asp-validation-for="PayIncreaseString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Comments</label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/js/Projections.js" type="text/javascript"></script>
<link rel="stylesheet" href="~/css/Projections.css" />
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}