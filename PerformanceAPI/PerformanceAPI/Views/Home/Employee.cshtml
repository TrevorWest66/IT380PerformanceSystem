@model IEnumerable<PerformanceAPI.Models.EmployeeDetailsModel>


@{
    ViewData["Title"] = "Employee";
}

<div class="col-md-4">
    @await Component.InvokeAsync("Employee")
</div>

<link rel="stylesheet" href="~/css/employeeDetails.css" />
<br />

@foreach (var item in Model)
{
    @if ((item.DateOfProjection.Contains(CurrentUserModel.CurrentYear)) && !(item.LastReviewDate.Contains(CurrentUserModel.CurrentYear)) 
        && item.SupervisorID.Equals(CurrentUserModel.CurrentEmployeeID))
    {
        <div class="text-center">
            <div class="maroon-link">
                @Html.ActionLink("Start Performance Review", "PerformanceReview", new { id = item.EmployeeID })
            </div>
            <br />
        </div>
    }
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Employee Details</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="empheader">Employee ID</td>
                <td>@Html.DisplayFor(modelItem => item.EmployeeID)</td>
            </tr>
            <tr>
                <td>Full Name</td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)@Html.DisplayFor(modelItem => item.MiddleName)@Html.DisplayFor(modelItem => item.LastName)</td>
            </tr>
            <tr>
                <td>Hire Date</td>
                <td>@Html.DisplayFor(modelItem => item.HireDate)</td>
            </tr>
            <tr>
                <td>@Html.DisplayFor(modelItem => item.SalaryFlag)</td>
                <td>$@Html.DisplayFor(modelItem => item.CurrentSalary)</td>
            </tr>
            <tr>
                <td>Current Position</td>
                <td>@Html.DisplayFor(modelItem => item.Posistion)</td>
            </tr>
            <tr>
                <td>Direct Supervisor</td>
                <td>@Html.DisplayFor(modelItem => item.SupervisorFirstName)@Html.DisplayFor(modelItem => item.SupervisorLastName)</td>
            </tr>
            <tr>
                <td>Team - Department</td>
                <td>@Html.DisplayFor(modelItem => item.Team) - @Html.DisplayFor(modelItem => item.Department)</td>
            </tr>
            <tr>
                <td>Date of Last Review</td>
                <td>@Html.DisplayFor(modelItem => item.LastReviewDate)</td>
            </tr>
            <tr>
                <td>Projection Made On</td>
                <td>@Html.DisplayFor(modelItem => item.DateOfProjection)</td>
            </tr>
            <tr>
                <td>Projected Rating</td>
                <td>@Html.DisplayFor(modelItem => item.ProjectedRating)</td>
            </tr>
            <tr>
                <td>Projected Position</td>
                <td>@Html.DisplayFor(modelItem => item.ProjectedPosition)</td>
            </tr>
            <tr>
                <td>Projected Salary Increase</td>
                <td>@Html.DisplayFor(modelItem => item.ProjectedSalaryIncrease)</td>
            </tr>
            <tr>
                <td>Projection Comments</td>
                <td>@Html.DisplayFor(modelItem => item.ProjectionComments)</td>
            </tr>
        </tbody>


    </table>
}








