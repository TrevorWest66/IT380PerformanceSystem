@model IEnumerable<PerformanceAPI.Models.EmployeeDetailsModel>


@{
    ViewData["Title"] = "Employee";
}

    <div class="col-md-4">
        @await Component.InvokeAsync("Employee")
    </div>

<link rel="stylesheet" href="~/css/employeeDetails.css" />
<br />
<table class="table table-striped table-bordered">
    @foreach (var item in Model)
    {
        <thead class="thead-dark">
            <tr>
                <th>Employee Details</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Employee ID</td>
                <td>@Html.DisplayFor(modelItem => item.EmployeeID)</td>
            </tr>
            <tr>
                <td>Full Name</td>
                <td>@Html.DisplayFor(modelItem => item.FirstName)@Html.DisplayFor(modelItem => item.MiddleName)@Html.DisplayFor(modelItem => item.LastName)</td>
            </tr>
            <tr>
                <td>Hire Date</td>
                <td>@Html.DisplayFor(modelItem => item.HireDate)</td>
            </tr>
            <tr>
                <td>@Html.DisplayFor(modelItem => item.SalaryFlag)</td>
                <td>$@Html.DisplayFor(modelItem => item.CurrentSalary)</td>
            </tr>
            <tr>
                <td>Current Position</td>
                <td>@Html.DisplayFor(modelItem => item.Posistion)</td>
            </tr>
            <tr>
                <td>Direct Supervisor</td>
                <td>@Html.DisplayFor(modelItem => item.SupervisorFirstName)@Html.DisplayFor(modelItem => item.SupervisorLastName)</td>
            </tr>
            <tr>
                <td>Team - Department</td>
                <td>@Html.DisplayFor(modelItem => item.Team) - @Html.DisplayFor(modelItem => item.Department)</td>
            </tr>
        </tbody>
    }

</table>








