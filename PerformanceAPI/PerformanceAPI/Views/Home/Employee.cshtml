@model IEnumerable<PerformanceAPI.Models.EmployeeModel>

@{
    ViewData["Title"] = "Employee";
}

<link rel="stylesheet" href="~/css/employee.css" />
<script src="~/js/site.js" type="text/javascript"></script>
<h1>Employee</h1>

    <div>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeLastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmployeeFirstName)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @Html.DisplayFor(modelItem => item.EmployeeLastName)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.EmployeeFirstName)
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <label for="employee">Select Employee:</label>

    <select id="employee" onchange="showDiv('hidden_div', this)">
        <option value="Select Employee" selected>Select Employee...</option>
    </select>


    <script>
        var select = document.getElementById("employee"),
            arr = ["Employee1", "Employee2"];
        for (var i = 0; i < arr.length; i++) {
            var option = document.createElement("OPTION"),
                txt = document.createTextNode(arr[i]);
            option.appendChild(txt);
            option.setAttribute("value", arr[i]);
            option.setAttribute("name", arr[i]);
            select.insertBefore(option, select.lastChild);
        }

    </script>
    <div id="hidden_div">
        <table class="minimalistBlack">


            <thead>
                <tr>
                    <th>Employee Information</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Employee Name</td>
                    <td>Last, First M</td>
                </tr>
                <tr>
                    <td>Employee ID</td>
                    <td>id</td>
                </tr>
                <tr>
                    <td>Position</td>
                    <td>Position Name</td>
                </tr>
                <tr>
                    <td>Department</td>
                    <td>department</td>
                </tr>
                <tr>
                    <td>Team</td>
                    <td>team</td>
                </tr>
                <tr>
                    <td>Supervisor</td>
                    <td>Last, First M</td>
                </tr>
                <tr>
                    <td>Last Rating</td>
                    <td>rating</td>
                </tr>
                <tr>
                    <td>Projected Rating</td>
                    <td>projected</td>
                </tr>
                <tr>
                    <td>Last Review</td>
                    <td>date</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </tbody>
        </table>
    </div>




